{{> head}}

<body>
  <a href="/" id="home">&larr; Back</a>
  <div id="errorContainer">
    <span id="error">{{error}}</span>
  </div>
  <div id="wrapperPersonInfo">
    <section id="person">
      <h1>{{name}} {{surname}}</h1>
      <form action="" method="POST">
        <label>Name:<input name="name" type="text" value={{name}} placeholder="required" required></label>
        <label>Surname: <input name="surname" type="text" value={{surname}} placeholder="required" required></label>
        <label>Father's Name: <input name="fathersName" type="text" value={{fathersName}}></label>
        <label>ID Number: <input name="IDNumber" type="number" value={{IDNumber}} placeholder="required" required></label>
        <label>Date of Birth: <input name="dateOfBirth" type="date" value={{dateOfBirth}}></label>
        <input name="personID" type="number" value={{personID}} class="hidden">
        <input name="operation" type="text" value="updatePerson">
        <button type="submit">Update Person</button>
      </form>
      <hr>
      <form action="" method="POST">
        <label>Make:<input type="text" name="make"></label>
        <label>Model:<input type="text" name="model"></label>
        <label>VIN:<input type="number" name="VIN" placeholder="required" required></label>
        <label>Plate Number:<input type="text" name="licensePlateNumber" placeholder="required" required></label>
        <label>Color<input type="text" name="color"></label>
        <input name="ownerID" type="number" value={{personID}} class="hidden">
        <input name="operation" type="text" value="addCar">
        <button type="submit">Add Car</button>
      </form>
    </section>
    <section id="car">
      <h1>{{name}}'s cars</h1>
      {{#each personsCars}}
      <form action="/person/info" id="carData" method="POST">
        <label>Make: <input name="make" type="text" value={{make}}></label>
        <label>Model: <input name="model" type="text" value={{model}}></label>
        <label>VIN: <input name="VIN" type="number" value={{VIN}} placeholder="required" required></label>
        <label>Plate Number: <input name="licensePlateNumber" type="text" value={{licensePlateNumber}} placeholder="required"
            required></label>
        <label>color: <input name="color" type="text" value={{color}}></label>
        <input name="carID" type="number" value={{carID}} class="hidden">
        <input type="text" name="operation" value="updateCar">
        <button type="submit">Update Car</button>
      </form>
      <hr>
      {{/each}}
    </section>
  </div>
</body>

</html>